<article class="post">
    <div class="title">
        <h3><a href="/post/{{id}}">{{title}}</a></h3>
        <p>{{post_text}}</p>
    </div>
    <div class="meta">
        By {{user.username}} on {{format_date created_at}}
        |
        {{comments.length}} {{format_plural "comment" comments.length}}
    </div>
</article>